<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="Content-type"
          content="application/xhtml+xml; charset=UTF-8" />
    <link rel="shortcut icon"
          href="[% c.uri_for('/static/images/') %]sites/[% site.id %]/favicon.ico" />
    <link rel="stylesheet" media="all"
          href="[% c.uri_for('/static/css/style.css') %]?v=1" />
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="stylesheet" media="all"
          href="[% c.uri_for('/static/css/adaptive.css') %]?v=1" />
    <link rel="alternate" type="application/rss+xml"
          title="[% site.sitename %]" href="[% c.uri_for('/rss.xml') %]" />

    [%# title block, templates should pass the shared hash %]
    <title>[% site.sitename %]</title>
    [% IF shared.scraperignore %]
    <meta name="robots" content="noindex,nofollow" />
    [% END %]
  </head>
  <body>
    <div id="secondary-menu">
      <ul id="sec-men-ul">
        <li>
          <a href="[% c.uri_for('/special/about') %]">About</a>
        </li>
        <li>

	      <a href="[% c.uri_for('/random') %]">[% c.loc('Random text') %]</a>
        </li>
      </ul>
    </div>
    <div id="vwbanner">
      <div id="wbanner">
	    <div id="banner">
	      <div id="searchbox">
	        <form id="formsearchbox" action="[% c.uri_for('/search') %]">
	          <p id="searchp">
		        <input type="text" name="query" value="" size="12" />
                <br id="full-text-search-separator" />
		        <input type="submit" value="[% c.loc('Full text search') %]" />
              </p>
	        </form>
	      </div>
	      <div id="bannerimage">
	        <a title="[% site.sitename %]"
               href="[% c.uri_for('/') %]">
              <img title="[% site.siteslogan %]"
                   alt="[% site.siteslogan %]"
                   src="[% c.uri_for('/static/images/') %]sites/[% site.id %]/logo.png"
                   id="title-logo-img" />

              <img title="[% site.siteslogan %]"
		           alt="[% site.siteslogan %]"
                   src="[% c.uri_for('/static/images/') %]sites/[% site.id %]/banner.png"
		           id="title-banner-img" />
	        </a>
	      </div>
	    </div>
	    <div id="nav">
	      <ul>
	        <li>
              <a href="[% c.uri_for('/authors') %]"
		         [% IF nav == 'authors' %]id="current"[% END %]
		         title="[% c.loc('texts sorted by author') %]">
                [% c.loc('Authors') %]
              </a>
            </li>
	        <li>
              <a href="[% c.uri_for('/library') %]"
		         [% IF nav == 'titles' %]id="current"[% END %]
		         title="[% c.loc('texts sorted by title') %]">
                [% c.loc('Titles') %]
              </a>
            </li>
	        <li>
              <a href="[% c.uri_for('/topics') %]"
		         [% IF nav == 'topics' %]id="current"[% END %]
		         title="[% c.loc('texts sorted by topics') %]">
                [% c.loc('Topics') %]
              </a>
            </li>
	      </ul>
	    </div>
      </div>
    </div>
    <div id="container">

      <div id="widepage">
        [% content %]
      </div>
      <div id="footer">
        <a href="[% c.uri_for('/rss.xml') %]">
          <img src="[% c.uri_for('/static/images/feed-icon-28x28.png') %]"
               alt="[% c.loc('syndicate') %]" id="rssicon" />
          [% c.loc("RSS") %]
        </a>
      </div>
    </div>
  </body>
</html>


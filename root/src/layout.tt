<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon"
          href="[% c.uri_for('/static/images/') %]sites/[% site.id %]/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="alternate" type="application/rss+xml"
          title="[% site.sitename %]" href="[% c.uri_for('/feed') %]" />

    [%# title block, templates should pass the shared hash %]
    <title>[% site.sitename %]</title>
    [% IF shared.scraperignore %]
    <meta name="robots" content="noindex,nofollow" />
    [% END %]

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
    <!-- Optional theme -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css" />
    <!-- Latest compiled and minified JavaScript -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

    [%# base css for amuse texts %]
    <link rel="stylesheet" href="[% c.uri_for('/static/css/amuse.css') %]" />

    [%# our css for the web application %]
    <link rel="stylesheet" href="[% c.uri_for('/static/css/amusewiki.css') %]" />

    [%# here we should add a local js and a local css %]
  </head>
  <body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse" role="navigation">
      <div class="container-fluiid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse"
                  data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="[% c.uri_for('/') %]">
            [% site.sitename %]</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li[% IF nav == 'author' %] class="active" [% END %]>
              <a href="[% c.uri_for('/authors') %]"
		         title="[% c.loc('texts sorted by author') %]">
                [% c.loc('Authors') %]
              </a>
            </li>
	        <li[% IF nav == 'titles' %] class="active" [% END %]>
              <a href="[% c.uri_for('/library') %]"
		         title="[% c.loc('texts sorted by title') %]">
                [% c.loc('Titles') %]
              </a>
            </li>
	        <li[% IF nav == 'topic' %] class="active" [% END %]>
              <a href="[% c.uri_for('/topics') %]"
		         title="[% c.loc('texts sorted by topics') %]">
                [% c.loc('Topics') %]
              </a>
            </li>
            <li>
	          <a href="[% c.uri_for('/random') %]">[% c.loc('Random') %]</a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                [% c.loc('More') %]
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                [% IF show_edit_bb %]
                <li>
                  <a href="[% c.uri_for('/bookbuilder/add', { text => text.uri }) %]">
                    [% c.loc('Add this text to the bookbuilder') %]
                  </a>
                </li>
                <li>
                  <a href="[% c.uri_for_action('/edit/revs', [ text.uri ]) %]">
                    [% c.loc('Edit this text') %]
                  </a>
                </li>
                <li class="divider"></li>
                [% END %]
                <li>
                  <a href="[% c.uri_for('/special/about') %]">About</a>
                </li>
                <li class="divider"></li>
                <li>
                  <a href="[% c.uri_for('/bookbuilder') %]">
                    [% c.loc('Book builder') %]
                  </a>
                </li>
                [% IF c.user_exists || site.human_can_edit %]
                <li>
                  <a href="[% c.uri_for('/new') %]">
                    [% c.loc('Add to library') %]
                  </a>
                </li>
                [% END %]
                [% IF c.user_exists || site.human_can_publish %]
                <li>
                  <a href="[% c.uri_for('/publish/pending') %]">
                    [% c.loc('Pending') %]
                  </a>
                </li>
                [% END %]
                [% IF c.user_exists %]
                <li>
                  <a href="[% c.uri_for('/logout') %]">
                    [% c.user.get('username') %] [% c.loc('logout') %]
                  </a>
                </li>
                [% END %]
                <li>
                  <a href="[% c.uri_for('/feed') %]">
                    [% c.loc("RSS feed") %]
                  </a>
                </li>
              </ul>
            </li>
          </ul>
          <form class="navbar-form navbar-right navbar-input-group" role="search"
                id="formsearchbox" action="[% c.uri_for('/search') %]">
            <div class="input-group" style="width:225px">
		      <input type="text" class="form-control"
                     placeholder="[% c.loc('Full text search') %]"
                     name="query" value=""/>
              <div class="input-group-btn">
                <button type="submit" class="btn btn-info">
                  <span class="glyphicon glyphicon-search"></span>
                </button>
              </div>
            </div>
          </form>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <div class="container">
      [% IF c.flash.status_msg %]
      <div class="alert alert-success" id="status_message">
        [% c.flash.status_msg %]
      </div>
      [% END %]
      [% IF c.flash.error_msg %]
      <div class="alert alert-warning" id="error_message">
        [% c.flash.error_msg %]
      </div>
      [% END %]
      <div id="widepage">
        [% content %]
      </div>
      <div id="footer">
      </div>
    </div>
  </body>
</html>


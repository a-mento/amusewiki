[% # -*- mode: html -*- %]
 
<!-- Login form -->
<form id="login-form" method="post" action="[% c.uri_for('/login') %]">
  <div class="form-group">
    <label for="username">[% c.loc('Username') %]:</label>
    <input type="text" name="username" id="username"
           class="form-control" placeholder="[% c.loc('Username') %]" />
  </div>
  <div class="form-group">
    <label for="password">[% c.loc('Password') %]:</label>
    <input type="password" name="password" id="password"
           class="form-control" placeholder="[% c.loc('Password') %]" />
  </div>
  <button type="submit" class="btn btn-default" name="submit" value="go">
    [% c.loc('Log in') %]
  </button>
</form>
